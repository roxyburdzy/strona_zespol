---
interface Props {
  src: string;
  alt: string;
  title: string;
}

const { src, alt, title } = Astro.props;
---

<div class="hero">
  <h1 class="hero_title">{title}</h1>
  <img class="main_photo" src={src} alt={alt} />
</div>

<style>
  .main_photo {
    width: 100%;
    max-height: 45vw;
    margin-bottom: 1rem;
  }
  .hero_title {
    font-size: 10vw;
    @media only screen and (max-width: 600px) {
      font-size: 8vw;
    }
    font-weight: 600;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    text-align: center;
    text-shadow: 5px 5px 10px black;
    letter-spacing: 3px;
    opacity: 0.9;
  }
  .hero {
    width: 100%;
    margin-top: 60px;
    position: relative;
  }
</style>
