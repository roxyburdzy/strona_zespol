---
import Layout from "../layouts/Layout.astro";
import "@fontsource/great-vibes";
---

<Layout title="Homepage.">
  <main>
    <div class="hero">
      <h1 class="hero_title">Harmony Quartet</h1>
      <img class="main_photo" src="main_photo.jpg" alt="Zespół Astro" />
    </div>
  </main>
</Layout>

<style>
  main {
    width: 100%;
    color: white;
    font-size: 20px;
    line-height: 1.6;
    z-index: 10;
  }

  .hero_title {
    font-family: "Great Vibes";
    font-size: 10rem;
    font-weight: 600;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    text-align: center;
    text-shadow: 5px 5px 10px black;
    letter-spacing: 3px;
    opacity: 0.8;
  }
  .hero {
    width: 100%;
    margin-top: 60px;
  }
</style>
