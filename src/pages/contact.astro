---
import Layout from "../layouts/Layout.astro";
import "@fontsource/great-vibes";
---

<Layout title="contact">
  <main>
    <h1>Kontakt</h1>

    <dl>
      <dt>Jelenia Góra</dt>
      <dt>tel. 883096943<br />tel. 696035499</dt>
      <dt>info@harmonyquartet.art</dt>
      <dt>
        <a
          target="_blank"
          href="https://www.facebook.com/profile.php?id=61552931991993"
          >Znajdź nas na FB</a
        >
      </dt>
    </dl>
  </main>
  <style>
    main {
      margin-top: 60px;
      padding-top: 60px;
      width: 100vw;
      color: white;
      font-size: 1.25rem;
      line-height: 1.6;
      position: relative;
      display: block;
      height: 80vh;
    }
    main::after {
      background-image: url("background_contact.jpeg");
      background-size: cover;
      opacity: 0.9;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      position: absolute;
      content: "";
      z-index: -1;
    }
    h1 {
      font-size: 6rem;
      font-weight: 700;
      line-height: 1;
      text-align: center;
      margin-bottom: 1rem;
      color: black;
    }
    dl {
      text-align: center;
      color: black;
      font-size: 2.5rem;
    }
    a {
      color: rgb(63, 110, 67);
    }
  </style>
</Layout>
